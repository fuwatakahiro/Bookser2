<p id="notice">Editing User</p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  	<h1>Editing Book</h1>
    <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
      <%= f.label :name %>
      <%= f.text_feild :name %>
      <%= f.label :profile_image %>
