<% if @user.errors.any? %>
  <ul class="alert alert-danger" role="alert">
　  <h6 class="alert-heading">
　  <%= @user.errors.count %>件のerrorが発生しました</h6>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  	<h1>Editing Book</h1>
    <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
      <%= f.label :name %><br>
      <%= f.text_field :name %><br>
      <%= f.label :profile_image %><br>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br> 
      <%= f.label :introduction %><br>
      <%= f.text_area :introduction %><br>
      <%= f.submit "Update User" %>
  	<% end %>
    </div>
  </div>
 </div>